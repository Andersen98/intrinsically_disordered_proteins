@article{freddolinoForceFieldBias2009,
  title = {Force {{Field Bias}} in {{Protein Folding Simulations}}},
  author = {Freddolino, Peter L. and Park, Sanghyun and Roux, Benoît and Schulten, Klaus},
  date = {2009-05},
  journaltitle = {Biophysical Journal},
  shortjournal = {Biophysical Journal},
  volume = {96},
  number = {9},
  pages = {3772--3780},
  issn = {00063495},
  doi = {10.1016/j.bpj.2009.02.033},
  url = {https://linkinghub.elsevier.com/retrieve/pii/S0006349509005888},
  urldate = {2023-12-02},
  abstract = {Long timescale ({$>$}1 ms) molecular dynamics simulations of protein folding offer a powerful tool for understanding the atomic-scale interactions that determine a protein’s folding pathway and stabilize its native state. Unfortunately, when the simulated protein fails to fold, it is often unclear whether the failure is due to a deficiency in the underlying force fields or simply a lack of sufficient simulation time. We examine one such case, the human Pin1 WW domain, using the recently developed deactivated morphing method to calculate free energy differences between misfolded and folded states. We find that the force field we used favors the misfolded states, explaining the failure of the folding simulations. Possible further applications of deactivated morphing and implications for force field development are discussed.},
  langid = {english},
  file = {/home/kathy/Zotero/storage/Z4H6CYSH/Freddolino et al. - 2009 - Force Field Bias in Protein Folding Simulations.pdf}
}
