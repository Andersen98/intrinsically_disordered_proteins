@article{fisherModelingIntrinsicallyDisordered2010,
  title = {Modeling {{Intrinsically Disordered Proteins}} with {{Bayesian Statistics}}},
  author = {Fisher, Charles K. and Huang, Austin and Stultz, Collin M.},
